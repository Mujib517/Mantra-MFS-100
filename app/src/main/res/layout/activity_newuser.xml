<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ebooks_bg"
    tools:context="com.example.mega2.final_livw_demo.Newuser">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:layout_marginStart="35sp"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:text="@string/enter_details"/>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="0.5sp"
    android:layout_marginStart="20sp"
    android:layout_marginBottom="30sp"
    android:layout_marginEnd="20sp"
    android:background="@drawable/newuser_back">

    <EditText
    android:id="@+id/uservalue"
    android:layout_width="match_parent"
    android:layout_height="50sp"
    android:drawableLeft="@drawable/account_outline"
    android:textSize="20sp"
    android:background="@drawable/textview"
    android:hint="@string/userid"
    android:inputType="text"
    android:layout_marginStart="10sp"
    android:layout_marginEnd="10sp"
    android:layout_marginTop="20sp"/>

    <EditText
    android:id="@+id/name"
    android:background="@drawable/textview"
    android:layout_width="match_parent"
    android:layout_height="50sp"
    android:textSize="20sp"
    android:layout_marginStart="10sp"
    android:layout_marginEnd="10sp"
    android:drawableLeft="@drawable/alphabetical_name"
    android:hint="@string/username"
    android:inputType="text"
    android:layout_marginTop="10sp"/>

    <Spinner
    android:id="@+id/spinner2"
    android:background="@drawable/textview"
    android:layout_width="match_parent"
    android:layout_marginStart="10sp"
    android:layout_marginEnd="10sp"
    android:layout_marginTop="10sp"
    android:layout_height="50sp" />

    <EditText
    android:id="@+id/Edt_password"
    android:layout_width="match_parent"
    android:layout_height="50sp"
    android:background="@drawable/textview"
    android:drawableLeft="@drawable/lock"
    android:hint="@string/password_admin_omly"
    android:layout_marginStart="10sp"
    android:layout_marginEnd="10sp"
    android:inputType="textPassword"
    android:textSize="20sp"
    android:layout_marginTop="10sp"/>

    <Spinner
    android:id="@+id/spinner"
    android:layout_width="match_parent"
    android:layout_height="50sp"
    android:layout_marginStart="10sp"
    android:layout_marginEnd="10sp"
    android:layout_marginTop="10sp"
    android:background="@drawable/textview" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight=".7"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <Button
    android:id="@+id/dob"
    android:layout_width="match_parent"
    android:layout_height="50sp"
    android:layout_marginTop="10sp"
    android:gravity="center_vertical"
    android:background="@drawable/textview"
    android:drawableLeft="@drawable/calendar"
    android:layout_marginStart="10sp"
    android:layout_marginEnd="10sp"
    android:hint="@string/date_of_birth"
    android:textSize="20sp" />

    <Button
    android:id="@+id/image_pic"
    android:background="@drawable/textview"
    android:hint="@string/tap_the_box_to_open_camera"
    android:layout_height="50sp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:textSize="20sp"
    android:layout_marginStart="10sp"
    android:layout_marginEnd="10sp"
    android:layout_marginTop="10sp"
    android:drawableLeft="@drawable/camera"
    android:textAllCaps="false"
    android:layout_marginBottom="20sp"/>
    </LinearLayout>
    <ImageView
        android:layout_weight=".3"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="10sp"
        android:id="@+id/preview_final"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:contentDescription="@string/_24_7_support"
        android:background="@drawable/textview"
        android:layout_marginBottom="20sp"/>
</LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:paddingStart="50sp"
        android:paddingEnd="50sp"
        android:weightSum="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0sp"
            android:layout_height="70dp"
            android:layout_weight=".50"
            android:background="@drawable/buttondsgn"
            android:text="@string/submit"
            android:layout_marginEnd="50sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="10sp"/>
        <Button
            android:id="@+id/button3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0sp"
            android:layout_height="70dp"
            android:layout_weight=".50"
            android:layout_marginEnd="30sp"
            android:background="@drawable/buttondsgn"
            android:text="@string/delete"
            android:textColor="@android:color/black"
            android:layout_marginBottom="10sp"/>
    </LinearLayout>
</LinearLayout>